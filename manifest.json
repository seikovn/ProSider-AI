//manifest.json
{
  "manifest_version": 3,
  "name": "Pro Sider AI - Trợ lý học tập",
  "description": "Trợ lý AI giúp dịch thuật, giải thích và chat thông minh.",
  "version": "1.0",
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Mở Pro Sider AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "sidebar.css",
        "sidebar.js",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
